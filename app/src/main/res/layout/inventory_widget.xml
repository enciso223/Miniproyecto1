<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg"
    android:padding="8dp">

    <!-- Logo superior izquierdo -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_inventory"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Texto naranja Inventory debajo del logo -->
    <TextView
        android:id="@+id/tv_inventory_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="#e7522e"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@id/img_logo"
        android:layout_alignStart="@id/img_logo" />

    <!-- Pregunta arriba a la derecha -->
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Ícono del ojo (mostrar/ocultar saldo) -->
    <ImageView
        android:id="@+id/img_eye"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_eye_open"
        android:layout_below="@id/tv_question"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp" />

    <!-- Saldo -->
    <TextView
        android:id="@+id/tv_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$****"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/img_eye"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp" />

    <!-- Gestionar inventario -->
    <LinearLayout
        android:id="@+id/ll_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_saldo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar inventario"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/img_manage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_manage_orange" />
    </LinearLayout>

</RelativeLayout>
